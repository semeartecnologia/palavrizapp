<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layout_no_essay"
    android:visibility="gone"
    android:background="@drawable/background_palavrizar"
    tools:context=".modules.plans.PlansFragment">


        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/back_blue"
            android:padding="16dp"
            android:layout_margin="32dp"
            android:weightSum="100"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/lapis3"
                    android:layout_width="200dp"
                    android:layout_height="200dp" />


                <TextView
                    android:textAllCaps="true"
                    android:textSize="24sp"
                    android:layout_marginTop="16dp"
                    android:textAlignment="center"
                    android:fontFamily="@font/gotham"
                    android:textColor="@color/purpleText"
                    android:text="@string/no_plan_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



                <TextView
                    android:visibility="gone"
                    android:id="@+id/btn_enviar_redacao"
                    android:background="@drawable/background_button_no_essay"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:paddingEnd="16dp"
                    android:text="Enviar redação"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/btn_get_plan"
                    android:background="@drawable/background_button_no_essay"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/white"
                    android:paddingEnd="16dp"
                    android:text="Adquira nosso plano!"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/text_get_plan"
                    android:textAlignment="center"
                    android:text="Nossos professores estão prontos pra te ajudar!"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/purpleText"
                    android:layout_gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content" />


        </LinearLayout>


</LinearLayout>

