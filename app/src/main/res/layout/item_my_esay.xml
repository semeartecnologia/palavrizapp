<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">

        <TextView
            android:id="@+id/tv_essay_title"
            tools:text="Esse é o título da minha redação, pode ser meio grande"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_gravity="center_vertical"
            android:maxLines="3"
            android:textSize="14sp"
            android:layout_weight="40"/>

        <TextView
            android:id="@+id/tv_essay_theme"
            tools:text="Tema de minha redação"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_weight="20"/>

        <TextView
            tools:text="Aguardando Feedback"
            android:id="@+id/tv_essay_status"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"/>

        <ImageView
            android:src="@drawable/ic_menu_black_24dp"
            android:id="@+id/iv_essay_action"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_weight="10"/>
    </LinearLayout>

    <View
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>