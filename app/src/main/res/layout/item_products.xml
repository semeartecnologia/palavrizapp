<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    android:background="@drawable/background_products"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:src="@drawable/livro"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />



            <TextView
                android:id="@+id/tv_plan_title"
                android:textAllCaps="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/gotham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


    </LinearLayout>


    <TextView
        tools:text="Envie uma redação para corrigirmos"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:id="@+id/tv_plan_description"
        android:layout_marginStart="24dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginEnd="24dp"
        android:textAlignment="center"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_plan_text"
        tools:text="R$14,80"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_gravity="center"
        android:background="@drawable/background_label_yellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView

        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:textColor="#F9A239"
        android:text="EU QUERO"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_gravity="center"
        android:background="@drawable/roudend_primary_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
