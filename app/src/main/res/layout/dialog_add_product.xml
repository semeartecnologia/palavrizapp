<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="8dp"
    android:background="@drawable/background_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
    android:id="@+id/create_structure_add_product"
        android:textSize="24sp"
        android:padding="16dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryText"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/add_product" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/create_plan_title_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_structure_add_plan">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_product_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/titillium_regular"
            android:hint="@string/product_id_hint"
            android:imeOptions="actionNext"
            android:maxLength="50"
            android:maxLines="1" />

    </android.support.design.widget.TextInputLayout>






    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_structure_add_plan">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_num_avulsos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/titillium_regular"
            android:inputType="number"
            android:hint="@string/num_credits_avulsos_user_hint"
            android:imeOptions="actionNext"
            android:maxLength="50"
            android:maxLines="1" />

    </android.support.design.widget.TextInputLayout>



    <Button
        android:visibility="gone"
        android:id="@+id/btn_delete_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/red_rounded_button"
        android:fontFamily="@font/titillium_regular"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/delete"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_plan_title_input" />

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_delete_plan">

        <Button
            android:id="@+id/btn_cancel_plan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/secondary_button"
            android:fontFamily="@font/titillium_regular"
            android:text="@string/cancel"
            android:textColor="@color/colorPrimary" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_create_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roudend_primary_button"
                android:enabled="false"
                android:fontFamily="@font/titillium_regular"
                android:text="@string/register_now_btn"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progress_product"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:elevation="8dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/btn_create_product"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/btn_create_product" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</LinearLayout>
