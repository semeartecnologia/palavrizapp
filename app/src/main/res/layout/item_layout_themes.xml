<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/card_main_content"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/tv_group_id"
            tools:text="GRUPO X"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_group_name"
            tools:text="Meio Ambiente"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:textSize="16sp"
            android:layout_below="@id/tv_group_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_theme_concept"
            android:layout_below="@id/tv_group_name"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            tools:text="Tema Conceito: Preservação Ambiental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</android.support.v7.widget.CardView>