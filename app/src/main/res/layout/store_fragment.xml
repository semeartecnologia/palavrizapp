<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@drawable/background_palavrizar"
    tools:context="com.palavrizar.tec.palavrizapp.modules.store.StoreFragment">

    <FrameLayout
        android:background="@drawable/background_login_shape"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progress_loading_products"
            android:layout_marginTop="16dp"
            android:layout_gravity="top|center"
            android:elevation="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">


                <TextView
                    android:textSize="30sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/gotham"
                    android:layout_marginTop="16dp"
                    android:text="@string/tab_products"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/gotham"
                    android:layout_marginTop="16dp"
                    android:text="Para dar uma up nos estudos"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="8dp"
                    android:id="@+id/recycler_products"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textSize="30sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/gotham"
                    android:layout_marginTop="16dp"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="true"
                    android:text="@string/label_plans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="8dp"
                    android:id="@+id/recycler_plans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>




    </FrameLayout>

</FrameLayout>
