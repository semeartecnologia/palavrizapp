<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content"
    android:background="@drawable/background_plans"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_plan_title"
            tools:text="Plano Grátis"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/radio_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="Acompanhe algumas aulas demonstrativas e envia até 2 redações"
            android:id="@+id/tv_plan_description"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/radio_plan"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="Preço: R$15,00"
            android:id="@+id/tv_plan_text"
            android:layout_width="wrap_content"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/tv_plan_description"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
