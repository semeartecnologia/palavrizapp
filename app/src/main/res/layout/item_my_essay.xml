<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="8dp"
    android:elevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_essay_title"
            tools:text="Esse é o título da minha redação, pode ser meio grande"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:ellipsize="end"
            android:textStyle="bold"
            android:maxLines="12"/>

        <TextView
            android:id="@+id/theme_label"
            android:text="@string/theme_label"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_essay_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_essay_theme"
            app:layout_constraintBottom_toBottomOf="@id/tv_essay_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_essay_theme"
            tools:text="Tema de minha redação"
            android:layout_width="0dp"
            android:maxLines="12"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_essay_title"
            app:layout_constraintLeft_toRightOf="@id/theme_label"
            app:layout_constraintRight_toRightOf="parent"
            android:ellipsize="end"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_essay_status"
            tools:text="Aguardando Feedback"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_essay_theme"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textAlignment="textEnd"
            android:textStyle="italic"
            android:alpha="0.7"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>